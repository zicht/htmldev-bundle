{
    "name": "zicht/htmldev-bundle",
    "description": "Easy living styleguides with Symfony and Twig",
    "type": "symfony-bundle",
    "authors": [
        {
            "name": "Zicht Online",
            "email": "info@zicht.nl"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "knplabs/knp-menu-bundle": "^3",
        "psr/simple-cache": "^1.0",
        "rakit/validation": "^1.2",
        "symfony/cache": "^3.4 || ^4.4",
        "symfony/framework-bundle": "^3.4 || ^4.4",
        "symfony/routing": "^3.4 || ^4.4",
        "twig/twig": "^2.7 || ^3",
        "zicht/framework-extra-bundle": "^8 || ^9",
        "zicht/twig-classes": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "zicht/standards-php": "^4"
    },
    "autoload": {
        "psr-4": {
            "Zicht\\Bundle\\HtmldevBundle\\": [
                "src/"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zicht\\Bundle\\HtmldevBundle\\Tests\\": [
                "tests/"
            ]
        }
    },
    "minimum-stability": "stable",
    "license": "MIT",
    "scripts": {
        "lint": "phpcs --standard=vendor/zicht/standards-php/phpcs.xml src/ tests/",
        "lint-no-warn": "phpcs -n --standard=vendor/zicht/standards-php/phpcs.xml src/ tests/",
        "lint-fix": "phpcbf --standard=vendor/zicht/standards-php/phpcs.xml src/ tests/",
        "test": "phpunit -c phpunit.xml.dist"
    }
}
