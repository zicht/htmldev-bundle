<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="htmldev.template" class="Zicht\Bundle\HtmldevBundle\Service\Template">
            <argument type="string">%kernel.root_dir%/../htmldev</argument>
        </service>
        <service id="htmldev.twig.extension" class="Zicht\Bundle\HtmldevBundle\Twig\HtmldevExtension">
            <tag name="twig.extension"/>
        </service>
    </services>
</container>