<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="htmldev.directory">%kernel.root_dir%/../htmldev</parameter>
    </parameters>

    <services>
        <service id="htmldev.template" class="Zicht\Bundle\HtmldevBundle\Service\Template">
            <argument type="string">%htmldev.directory%</argument>
        </service>
        <service id="htmldev.color_service" class="Zicht\Bundle\HtmldevBundle\Service\SassColorService">
            <argument type="string">%htmldev.directory%</argument>
        </service>
        <service id="htmldev.svg_service" class="Zicht\Bundle\HtmldevBundle\Service\SvgService">
            <argument type="string">%htmldev.directory%</argument>
        </service>
        <service id="htmldev.html_service" class="Zicht\Bundle\HtmldevBundle\Service\HtmlService" />

        <service id="htmldev.twig.extension" class="Zicht\Bundle\HtmldevBundle\Twig\HtmldevExtension">
            <argument type="string">%htmldev.directory%</argument>
            <argument type="service" id="htmldev.color_service" />
            <argument type="service" id="htmldev.svg_service" />
            <argument type="service" id="htmldev.html_service" />
            <tag name="twig.extension"/>
        </service>

        <service id="htmldev.command" class="Zicht\Bundle\HtmldevBundle\Command\RenderCommand">
            <argument type="service" id="service_container"/>
            <tag name="console.command"/>
        </service>

        <service id="htmldev.htmldev_controller" class="Zicht\Bundle\HtmldevBundle\Controller\HtmldevController">
            <argument type="service" id="htmldev.template" />
            <argument type="service" id="twig" />
            <argument type="service" id="templating" />
            <argument type="service" id="form.factory" />
        </service>
    </services>
</container>